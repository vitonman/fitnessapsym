{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ users.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ users.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ users.roles ? users.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ users.password }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ users.name }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ users.lastname }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ users.date ? users.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ users.gender }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ users.phone }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">back to list</a>

    <a href="{{ path('user_edit', {'id': users.id}) }}">edit</a>

    {{ include('users/_delete_form.html.twig') }}
{% endblock %}
