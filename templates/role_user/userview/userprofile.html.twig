{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block body %}

    <div class="column">


        <table class="table is-bordered is-striped is-narrow is-hoverable is-fullwidth">
            <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Name</th>
                <th>Lastname</th>
                <th>Date</th>
                <th>Gender</th>
                <th>Phone</th>
                <th>actions</th>
            </tr>
            </thead>
            <tfoot>

            {% if user %}
                <tr>
                    <td><abbr>{{ user.id }}</abbr></td>
                    <td><abbr>{{ user.email }}</abbr></td>
                    <td><abbr> {{ user.name }}</abbr></td>
                    <td><abbr> {{ user.lastname }}</abbr></td>
                    <td><abbr> {{ user.date ? user.date|date('d/m/Y') : '' }}</abbr></td>
                    <td><abbr> {{ user.gender }}</abbr></td>
                    <td><abbr> {{ user.phone }}</abbr></td>
                    <td>
                        <a href="{{ path('user_show', {'id': user.id}) }}">load image</a>
                    </td>
                </tr>
            {% else %}
                <td colspan="5">no records found</td>
            {% endif %}

            </tfoot>
        </table>
    </div>
{% endblock %}
